{
	"name": "Linky",
    "version": "0.2",
    "manifest_version": 2,
    "description": "To temporarily store tabs(URLs) to a set. You can open them later, or share with others.",
    "icons": {
        "16": "icons/Linky-16.png",
        "48": "icons/Linky-48.png",
        "128": "icons/Linky-128.png"
    },
    "browser_action": {
        "default_icon": "icons/Linky-19.png",
        "default_popup": "popup.html",
        "default_title": "'Linky"
    },
    "sandbox": {
        "pages": ["sandbox.html"]
    },
    "permissions": ["tabs"]
}